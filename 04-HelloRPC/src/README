%%%%% Console na sdi-1 %%%%%
sdi-1> make clean; make
sdi-1> sudo ./server
ou
make clean; make; clear; ./server

%%%%% Console na sdi-2 %%%%%
sdi-2> ./client sdi-1 mensagem
ou
./client localhost teste lucas file1M.client

%%%%% CRIAR ARQUIVOS E DISTRIBUIR NOS DIRETORIOS %%%%%
na pasta src:
make clean; make; cp server ../server; cp client ../client01; cp client ../client02; cp client ../client03; 


